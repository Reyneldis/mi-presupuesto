---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicon (el que arreglamos antes) -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- SEO y Redes Sociales -->
    <meta
      name="description"
      content="Gestiona tu salario, controla tus gastos mensuales y ahorra dinero de forma inteligente."
    />
    <meta name="author" content="Reyneldis" />

    <!-- Color de tema para móviles (barra superior azul) -->
    <meta name="theme-color" content="#4f46e5" />

    <!-- Open Graph (para cuando compartas el link) -->
    <meta property="og:title" content="Mi Presupuesto Personal" />
    <meta
      property="og:description"
      content="Tu gestor de finanzas personal y seguro."
    />
    <meta property="og:type" content="website" />

    <!-- Fuente Profesional (Inter) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>
  <body class="bg-slate-100 font-sans antialiased">
    <slot />
  </body>
</html>

<style is:global>
  /* Aplicamos la fuente Inter a todo */
  html {
    font-family: 'Inter', system-ui, sans-serif;
  }

  /* Animación suave para el scroll */
  html {
    scroll-behavior: smooth;
  }
</style>
